<%= button_to "Delete Band", band_url, :method => :delete%>


<h2><%= @band.band_name %></h2>
<table>
  <% @band.albums.each do |album| %>

  <h3><th><%= link_to album.album_name, album_url(album) %></th></h3>
    <% album.tracks.each do |track| %>

    <tr><td><%= link_to track.track_name, track_url(track) %></td></tr>

    <% end %>
  <% end %>
</table>